@model WebApplication2.Models.RegisterViewModel
@{
    ViewBag.Title = "Реєстрація";
}

<style>
    #login-form {
        margin: 150px auto;
        width: 300px;
        position: absolute;
        margin-top: 20px;
        left: 38%;
    }

    #login-main {
        background: url(../../Images/bg.png) repeat;
        color: #999;
        font: 100%/1.5em sans-serif;
        height: 650px;
        margin-top: 0px;
    }

    #login-form h2 {
        background-color: #282830;
        border-radius: 5px 5px 0 0;
        color: #fff;
        font-size: 14px;
        padding: 20px;
        text-align: center;
        text-transform: uppercase;
        margin-left: 2px;
        width: 264px;
        margin-top: 20px;
        position: relative;
    }

    #login-form fieldset {
        background: #fff;
        border-radius: 0 0 5px 5px;
        padding: 20px;
        position: relative;
        border: #fff;
    }

     #login-form fieldset:before {
            background-color: #fff;
            content: "";
            height: 8px;
            left: 50%;
            margin: -4px 0 0 -4px;
            position: absolute;
            top: 0;
            -webkit-transform: rotate(45deg);
            -moz-transform: rotate(45deg);
            -ms-transform: rotate(45deg);
            -o-transform: rotate(45deg);
            transform: rotate(45deg);
            width: 8px;
        }   

    #login-form input {
        font-size: 14px;
    }

    .email,
    .field {
        border: 1px solid #dcdcdc;
        padding: 12px 10px;
        width: 238px;
    }

    .email {
        border-radius: 3px 3px 0 0;
    }

    .password {
        border-top: none;
        border-radius: 0px 0px 3px 3px;
    }

    .submit {
        background: #4682B4;
        border-radius: 5px;
        color: #fff;
        margin-left:45px;
        font-weight: bold;
        margin-top: 20px;
        padding: 12px 20px;
        border: #1dabb8;
    }

    .submit {
        cursor: pointer;
    }

    .submit:hover {
            background: #198d98;
        }    

</style>

<div id="header-wrapper">
    <header id="header" class="5grid-layout">
        <div class="row">
            <div class="12u">
                <!-- Logo -->
                <h1><a href="#" class="mobileUI-site-name">3D Madness</a></h1>
                <p>Our 3d models are the best</p>
                <!-- Nav -->
                <nav class="mobileUI-site-nav">
                    @Html.ActionLink("Homepage", "Index", "Home")
                    <a href="threecolumn.html">Three Column</a>
                    <a href="twocolumn1.html">Two Column #1</a>
                    <a href="onecolumn.html">One Column</a>
                    @Html.Partial("_LoginPartial")
                </nav>
            </div>
        </div>
    </header>
</div>

<div id="login-main">
    <div id="login-form">
        <h2>@ViewBag.Title</h2>
        <fieldset>
            @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div>
                    @Html.LabelFor(m => m.Email, "Eлектронна пошта", new { @class = "" })
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "email" })
                    </div>
                </div>
                <div>
                    @Html.LabelFor(m => m.Password, "Пароль", new { @class = "" })
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "field" })
                    </div>
                </div>
                <div>
                    @Html.LabelFor(m => m.ConfirmPassword, "Підтвердження паролю", new { @class = "" })
                    <div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "field" })
                    </div>
                </div>
                <div>
                    @Html.LabelFor(m => m.FirstName, "Ім'я", new { @class = "" })
                    <div>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "field" })
                    </div>
                </div>
                <div>
                    @Html.LabelFor(m => m.LastName, "Прізвище", new { @class = "" })
                    <div>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "field" })
                    </div>
                </div>
                <div>
                    @Html.LabelFor(m => m.PhoneNumber, "Номер телефону", new { @class = "" })
                    <div>
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "field" })
                    </div>
                </div>
                <div>
                    <div>
                        <a href="">
                            <input type="submit" value="Зареєструватися" class="submit" />
                        </a>
                    </div>
                </div>                
            }
        </fieldset>
    </div>
</div>

<div class="5grid-layout">
    <div id="copyright">
        <section>
            <p>&copy; Your Site Name | Images: <a target="_blank" href="http://fotograph.com/">Fotogrph</a> | Design: <a target="_blank" href="http://html5templates.com/">HTML5Templates.com</a></p>
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



